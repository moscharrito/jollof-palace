{
  "name": "jollof-palace-backend",
  "version": "1.0.0",
  "description": "Backend API for Jollof Palace food ordering system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node scripts/vercel-build.js",
    "build:full": "node scripts/vercel-build.js",
    "build:simple": "node scripts/simple-build.js",
    "build:advanced": "node scripts/build.js",
    "build:tsc": "tsc",
    "build:fast": "node scripts/build.js --skip-prisma",
    "start": "node scripts/production-start.js",
    "start:direct": "node dist/index.js",
    "postinstall": "node scripts/prisma-postinstall.js",
    "clean": "node scripts/clean.js",
    "clean:all": "node scripts/clean.js --all",
    "prisma:fix": "node scripts/windows-prisma-fix.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "lint": "eslint . --ext .ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "test:startup": "node scripts/test-startup.js"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "@types/pdfkit": "^0.17.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "paypal-rest-sdk": "^1.8.1",
    "pdfkit": "^0.17.2",

    "socket.io": "^4.7.2",
    "stripe": "^14.9.0",
    "winston": "^3.10.0",
    "xlsx": "^0.18.5",
    "typescript": "^5.1.6",
    "prisma": "^5.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/paypal-rest-sdk": "^1.7.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7"
  }
}
